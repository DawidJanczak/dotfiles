[alias]
  edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; vim `f`"
  open-modified = "!f() { git diff --name-only; }; vim `f`"
[core]
  excludesfile = $HOME/.gitignore_global
  pager = delta
[color]
  ui = true
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[delta]
  features = side-by-side
  syntax-theme = zenburn
[diff]
  colorMoved = default
[diff "sopsdiffer"]
	textconv = sops -d
[difftool]
  prompt = false
[push]
  default = current
[user]
  email = dawid.janczak@gmail.com
  name = Dawid Janczak
[pull]
	ff = only
